<h1>Listing queens</h1>

<ul class="rating_list">
  <% @queens.each_with_index do |queen, index| %>
      <li queen="<%= queen._id %>">
        <div class="position">
          <%= index + 1 %>
        </div>
        <div class="rating">
          <%= queen.rating %>
        </div>
        <div class="photo">
          <%= link_to(image_tag(queen.photo_medium_rec, :alt=>"#{queen.first_name} #{queen.last_name}"), queen) %>
        </div>
        <div class="name">
          <%= link_to "#{queen.first_name} #{queen.last_name}", queen %>
          <div class="button_blue">
            <button class="rating_up" type="button">
              Поднять
            </button>
          </div>
          <div class="button_blue">
            <button class="rating_down" type="button">
              Опустить
            </button>
          </div>
        </div>
      </li>
  <% end %>
</ul>