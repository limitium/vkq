<div class="queen" queen="<%= @queen._id %>">
  <div class="narrow_column fl_l">
    <div class="avatar">
      <%= image_tag @queen.photo_big, :alt=>"#{@queen.first_name} #{@queen.last_name}" %>
    </div>
    <div style="cursor: default;" class="rate_line stage0">
      <div class="rating_<%= @queen._id %> rating rate_text"><%= @queen.rating %></div>
      <div>
        <div style="width: 0px;" class="rate_left fl_l"></div>
        <div style="width: 200px;" class="rate_right fl_r"></div>
      </div>
    </div>
    <div class="button_blue">
      <button queen="<%= @queen._id %>" class="vote_button rating_up" type="button">
        Поднять
      </button>
    </div>
    <div class="button_gray fl_r">
      <button queen="<%= @queen._id %>" class="vote_button rating_down" type="button">
        Опустить
      </button>
    </div>


    <div class="module achive_module">
      <div class="module_header">
        <div class="header_top clear_fix">
          Статистика
        </div>
        <div class="p_header_bottom">
          <span class="fl_r rating_<%= @queen._id %>"><%= @queen.rating %></span>
          Рейтинг
        </div>
        <div class="p_header_bottom">
          <span class="fl_r force_<%= @queen._id %>"><%= @queen.force %></span>
          Сила голоса
        </div>
        <div class="p_header_bottom">
          <span class="fl_r total_<%= @queen._id %>"><%= @total %></span>
          Голосов
        </div>
        <div class="p_header_bottom">
          <span class="fl_r"><span class="pluses_<%= @queen._id %>"><%= @pluses %></span>(<span class="percent_<%= @queen._id %>"><%= @total>0 ? sprintf('%.1f', @pluses.fdiv(@total)*100) : 0 %></span>%)</span>
          Плюсов
        </div>
        <div class="p_header_bottom">
          <span class="fl_r total_self_<%= @queen._id %>"><%= @total_self %></span>
          Проголосовал
        </div>
        <div class="p_header_bottom">
          <span class="fl_r"><span class="pluses_self_<%= @queen._id %>"><%= @pluses_self %></span>(<span class="percent_self_<%= @queen._id %>"><%= @total_self>0 ? sprintf('%.1f', @pluses_self.fdiv(@total_self)*100) : 0 %></span>%)</span>
          Поставил<%= @queen.sex == 1 ?"а":"" %> плюсов
        </div>
      </div>
    </div>

  </div>
  <div class="wide_column fl_r">
     <h4>
      <div class="name">
        <%= "#{@queen.first_name} #{@queen.nickname} #{@queen.last_name}" %> <a href="http://vkontakte.ru/id<%= @queen.id %>">(профаил vkontakte)</a>
      </div>
    </h4>
    <div class="position_module">
      <div class="module_header" href="<%= url_for queen_show_path(@queen) %>">
        <div class="header_top clear_fix">
          <span class="right_link fl_r">детализация</span>
          Голоса
        </div>
      </div>

      <div class="position_list module_body clear_fix">

        <table class="queen_list" id="rates">
        <% @rates.each_with_index do |rate, index| %>
           <tr <%= index + 1 == @rates.length ? "last_page=" + paginate(@rates)  :"" %><%= rate.value>0 ? "" :"class=minus" %> >
              <td class="stats_photo">
                <div>
                  <%= ava_link rate.voter %>
                </div>
              </td>
              <td class="stats_from">
                <div class="name wrapped">
                  <%= name_link rate.voter %>
                </div>
                <div class="date">
                  <%= time_ago_in_words Time.at(rate.created_at) %> назад
                </div>
              </td>
              <td class="voter_value">
                <div class="rate_<%= rate.value>0 ? "plus" :"minus" %>">
                </div>
                <div class="rate_value">
                  <%= rate.value.abs %>
                </div>
              </td>
              <td class="voter_stat">
                <div class="label">Рейтинг:</div>
                <div class="labeled">
                  <%= rate.voter.rating %>
                </div>
              </td>
            </tr>
        <% end %>
      </table>
      </div>
    </div>


