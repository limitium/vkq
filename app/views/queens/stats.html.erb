  <div class="side_panel narrow_column fl_l">
  	<div class="section_block">
  	  	Ратинг
<div id="rating_<%= @queen._id %>" class="rating rate_text">
  <%= @queen.rating %>
</div>

голосов <%= @total %> плюсов <%= @pluses %> (<%= @total>0?sprintf('%.1f', @pluses.fdiv(@total)*100):0 %>%)

