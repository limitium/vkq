</div>
  </div>	
  <div class="main_panel fl_r">
  	<table id="rates">
  	<% @rates.each do |rate| %>
  	<tr <%= rate.value>0 ? "" :"class=minus" %> >
  		<td class="stats_photo">
  			<div>
  			<%= ava_link rate.voter %>
  			</div>
  		</td>
  		<td class="stats_from">
  			<div class="name wrapped">
  			<%= name_link rate.voter %>
  			</div>
  			<div class="date">
  				<%= time_ago_in_words Time.at(rate.created_at)%> назад
  				</div>
  		</td>
  		<td class="photo">
  			<%= rate.value>0 ? "+" :"-" %>
  		</td>
  		<td class="photo">
  			
  		</td>
    </tr>
<% end %>
</table>

  </div>



